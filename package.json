{
	"name": "imagining-the-neutrino",
	"private": true,
	"version": "1.4.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "biome format",
		"lint": "biome lint",
		"lint:math": "npx tsx scripts/lint-math.ts",
		"check": "biome check",
		"format:write": "biome format --write .",
		"lint:write": "biome lint --write .",
		"check:write": "biome check --write .",
		"check:all": "npm run lint && npm run lint:math && npm run test",
		"stylelint": "stylelint **/*.css",
		"build:wasm": "bash scripts/build-wasm.sh",
		"build:full": "npm run build:wasm && npm run build"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^22.14.1",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react-swc": "^3.8.0",
		"@vitest/coverage-v8": "^3.1.2",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.3",
		"stylelint": "^16.18.0",
		"stylelint-config-standard": "^38.0.0",
		"tailwindcss": "^4.1.4",
		"typescript": "~5.7.2",
		"vite": "^6.3.1",
		"vitest": "^3.1.1"
	},
	"dependencies": {
		"katex": "^0.16.28",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	}
}
